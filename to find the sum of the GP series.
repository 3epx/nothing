#include <iostream>
using namespace std;
int main(){
    int s_s = 0 , e_s = 0 , d = 0 , sum = 1; 
    cout << "enter the number of start series : ";
    cin >> s_s;
    cout << "enter the number of numbers in series : ";
    cin >> e_s;
    cout << "enter the number of multiplay : ";
    cin >> d;   
    sum = s_s;
    for (int i = 1; i<= e_s ; i++){
        sum = sum * d;
        cout << sum << " + ";
    }
 cout << "= " << sum;

}
