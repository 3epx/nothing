#include <iostream>
#include <cmath>
using namespace std;
int main() {
int n = 0 , terms = 0; float sum1 = 0 ; int k = 3 , sum = 0; 
cout << "enter the number pls : ";
cin >> n;
cout << "enter the number of trems : ";
cin >> terms;
int m = -1;
for (int i = 1; i < terms; i++){
    sum1 = pow(n,k) * m;
    sum = sum + sum1;
    k +=2;
    m = m *-1;
}
sum = sum + n;
cout << "final result is : " <<  sum;
    return 0;
} 
