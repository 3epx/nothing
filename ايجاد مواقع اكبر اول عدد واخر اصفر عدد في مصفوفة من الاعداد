#include <iostream>
using namespace std;
int main() {

	float rect[5] = { 3,8,5,8,1 };
	int min = rect[0];
	int max = rect[0];
	int i_p_min;
	int i_p_max;

	for (int i = 0; i < 5;i++) {
		if (rect[i] <= min) {
			min = rect[i];
			i_p_min = i;
		}
		if (rect[i] > max) {
			max = rect[i];
			i_p_max = i;
		}
	}
	cout << "the smaller number is :  " << min << endl;
	cout << "the position is :  " << i_p_min << endl;
	cout << "the bigest number is :  " << max << endl;
	cout << "the position is :  " << i_p_max << endl;

}
