#include <iostream>
using namespace std;
void summ(int n, int& sum) {
    sum = sum + n;
}
void proo(int n, int& pro) {
    pro = pro + n;
}
int main() {
    int n = 0, sum = 0 , pro = 1; 
    for (int i = 1; i <= 10; i++) {
        cout << "enter the number pls : ";
        cin >> n;
        summ(n, sum);
        proo(n, pro);
    }
    cout << "sum of numbers is : " << sum << endl;
    cout << "produac of numbers is : " << pro << endl;
    cout << "avareg of numbers is : " << sum / 10 << endl;
    return 0;
}
