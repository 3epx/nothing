#include <iostream>
using namespace std;
int main() {
int n1 = 0, n2 = 0 , l1 = 0 , l2 = 0 , lcm = 0;
cout << "enter the numbers smaller then bigest pls : ";
cin >> n1 >> n2;

for (int i = 1; i <= n1; i++){
    if (n1 %i == 0){l1 = i;}
    if (n2 %l1 == 0){l2 = l1;}
}

lcm = n1 * n2 / l2;

cout << "LCM for this numbers is : " << lcm;


    return 0;
}
