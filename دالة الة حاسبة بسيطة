#include <iostream>
using namespace std;
void Calc(int a , int b, int op){

if (op == 1){cout << a -b;}
else if (op == 2){cout << a *b;}
else if (op == 2){cout << a *b;}
else if (op == 3){cout << a /b;}
else {cout << a +b;}

}
int main() {

int a = 0 , b = 0 , op = 0;
cout << "enter first number : ";
cin >> a;
cout << "enter second number : ";
cin >> b;
cout << "enter the operator : ";
cin >> op;
Calc(a,b,op);



    return 0;
}
