#include <iostream>
#include <cmath>
using namespace std;

void tringlpls(int a ,int &p ,int &s){
    
    p = a * 3;
    s = a*a * sqrt(3);
    s = s / 4;
}

int main() {

int a = 0 , p = 0 , s = 0;
cout << "enter the value : ";
cin >> a;

tringlpls(a,p,s);
cout << "Perimeter of triangle is : " << p << endl;
cout << "Area of triangle is : " << s << endl;


    return 0;
}
