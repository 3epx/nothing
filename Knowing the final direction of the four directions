if (d == 1 and n1 == 1){n1 = 0;}
else if (d == 1 and n1 == 2){n1 = 180;}
else if (d == 1 and n1 == 3){n1 = 270;}
else if (d == 2 and n1 == 1){n1 = 180;}
else if (d == 2 and n1 == 2){n1 = 0;}
else if (d == 2 and n1 == 3){n1 = 90;}
