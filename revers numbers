#include <iostream>
using namespace std;
int main(){
    int n = 0 , r = 0 , sum = 0 , t = 0; 
    cout << "enter the number pls : ";
    cin >> n;
    
    
    for (t = n; n!= 0 ; n = n/10){
        
        r = n %10;
        sum = sum *10 + r;
        
    }
    cout << "orignal number is : " << t << endl;
    cout << "revers number is : " << sum;
    
}
