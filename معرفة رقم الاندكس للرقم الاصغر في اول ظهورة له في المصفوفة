#include <iostream>
using namespace std;
int main() {

	float rect[5] = { 3,8,5,8,1 };
	int min = rect[0];int i_p_min;

	for (int i = 0; i < 5;i++) {
		if (rect[i] < min) {
			min = rect[i];
			i_p_min = i;
		}
	}
	cout << "the smaller number is :  " << min << endl;
	cout << "the position is :  " << i_p_min << endl;

}
