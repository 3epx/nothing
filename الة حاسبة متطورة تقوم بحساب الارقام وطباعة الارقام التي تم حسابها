#include <iostream>
using namespace std;
int main() {
    int n = 10; int sum = 0; int i = 0;
    int* a = new int[n];
    for (int i = 0; i != n; i++) {
        cout << "enter the number pls : ";
        cin >> a[i];
        sum = sum + a[i];
        cout << sum << endl;
        for (int u = 0; u <= i; u++) {
            cout << a[u] << "   ";
        }
        if (i < n) { n++; }
        cout << endl;
    }
    return 0;
}
