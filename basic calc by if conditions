#include <iostream>
using namespace std;
int main() {

int x = 0 , n1 = 0 , n2 = 0;
cout << "enter the number from 1 to 4 : " << endl<<"1 . *" << endl<<"2 . /" << endl<<"3 . -" << endl<<"4 . +" << endl;
cin >> x;
cout << "enter first number pls : ";
cin >> n1;
cout << "enter second number pls : ";
cin >> n2;

if (x == 1){cout << "result is : " << n1 * n2;}
else if (x == 2){cout << "result is : " << n1 / n2;}
else if (x == 3){cout << "result is : " << n1 - n2;}
else if (x == 4){cout << "result is : " << n1 + n2;}


    return 0;
}
