#include <iostream>
using namespace std;
int main() {
 float x = 0 , y = 0 , number = 0;
cout << "chose any unit you want to convert : " << endl
<< "1.Gram " << endl
<< "2.Ounce "<< endl
<< "3.Pound "<< endl
<< "4.Kilogram "<< endl
<< "5.Ton "<< endl
<< endl;
